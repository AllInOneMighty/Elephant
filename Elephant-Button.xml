<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">
<Button name="ElephantButtonTemplate" movable="true" virtual="true">
	<Size x="32" y="34"/>
	<Scripts>
		<OnLoad>
			self:SetPoint("BOTTOM", QuickJoinToastButton, "TOP")
		</OnLoad>
		<OnEnter>
			Elephant:SetTooltip(self, Elephant.L['togglebuttontooltip'])
		</OnEnter>
		<OnLeave>
			Elephant:UnsetTooltip()
		</OnLeave>
		<OnClick>
			Elephant:Toggle()
		</OnClick>
		<OnMouseDown>
			if button == "RightButton" then
				self:StartMoving()
			end
			if button == "MiddleButton" then
				Elephant:ResetButtonPosition()
			end
		</OnMouseDown>
		<OnMouseUp>
			self:StopMovingOrSizing()
		</OnMouseUp>
	</Scripts>
	<NormalTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Up"/>
	<PushedTexture file="Interface\Buttons\UI-SpellbookIcon-NextPage-Down"/>
	<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD"/>
</Button>
</Ui>
